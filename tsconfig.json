{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "typeRoots": ["./node_modules/@types", "./typechain-types"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "scripts/**/*",
    "test/**/*",
    "typechain-types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cache",
    "artifacts"
  ]
} 